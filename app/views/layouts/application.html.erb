<!DOCTYPE html>
<html>
<head>
  <title>Betsy</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<header>
  <nav class="top-bar">

    <div class="top-bar-left">
      <%= link_to("Adoptsy", products_path, class: "menu-text") %>
    </div>

    <div class="top-bar-right">
      <ul class="vertical medium-horizontal menu" data-responsive-menu="accordion medium-dropdown">
        <li>
          Browse
          <ul class="vertical menu">
            <li><%= link_to "All Products", products_path %></li>
            <li><%= link_to "By Seller", users_path %></li>
            <li><%= link_to "By Category", categories_path %></li>
          </ul>
        </li>
        <% if session[:user_id] %>
        <% @user = User.find(session[:user_id]) %>
        <% end %>
        <li><%= link_to "Account"%></li>
        <li><%= link_to "Logout"%></li>
        <li><%= link_to "Login" %></li>
        <li> <%= link_to "Cart"%></li>
      </ul>
    </div>

  </nav>

</header>

<main>
  <section class="flash">
    <% flash.each do |name, message| %>
    <div class="<%= name %>"><%= message %></div>
    <% end %>
  </section>

  <%= yield %>
</main>

<footer>
  <h6>&copy; 2018 Adoptsy</h6>
</footer>

</body>
</html>
